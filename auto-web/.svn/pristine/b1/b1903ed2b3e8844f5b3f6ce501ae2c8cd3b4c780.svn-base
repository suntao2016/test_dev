package com.ccigmall.auto.test.act.pc.retailer.booking;

import org.openqa.selenium.WebDriver;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

import com.ccigmall.auto.test.act.SettingActiton;
import com.ccigmall.auto.test.page.pc.retailer.booking.ProductDetailsPage;
/**
 * @author chenjingli
 * 订单详情页 动作
 */
public class ProductDetailsAct  extends SettingActiton{
	/**
	 * slf4j
	 */
	private final static Logger logger = LoggerFactory
			.getLogger(ProductDetailsAct.class);
	/**
	 * 商品详情page
	 */
	private ProductDetailsPage detailsPage;
	
	/**
	 * 
	 * @param driver
	 */
	public ProductDetailsAct(WebDriver driver) {
		super(driver);
		detailsPage=new ProductDetailsPage(driver);
	}
	/**
	 * 输入获得 友情提示中 最小数量
	 */
	public void typeMinNum(String getMinNum) {
		logger.info("输入友情提示中的最小数量：{}",getMinNum);
		type(detailsPage.getXpathTypeFuturesNum(),getMinNum);
	}
	/**
	 * 点击期货中的加“+”号
	 */
	public void clickAddQi() {
		logger.info(" 点击期货中的加“+”号");
		click(detailsPage.getXpathCliAddQi());
	}
	
	/**
	 * 点击现货中的加“+”号
	 */
	public void clickAddXian() {
		logger.info(" 点击现货中的加“+”号");
		click(detailsPage.getXpathCliAddXian());
	}
	
	/**
	 * 输入现货数量
	 */
	public void inputSpotAmont(String num) {
		logger.info("输入现货数量{}",num);
		type(detailsPage.getInputSpotAmount(),num);
	}
	
	/**
	 * 点击立即订购按钮
	 */
	public void clickOderButton() {
		logger.info("点击立即订购按钮:{}",detailsPage.getIdCliOderButton());
		click(detailsPage.getIdCliOderButton());
	}
	
}
