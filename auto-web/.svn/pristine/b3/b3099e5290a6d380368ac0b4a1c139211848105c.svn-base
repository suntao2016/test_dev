package com.ccigmall.auto.test.page.pc.platform.promotion;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

import com.ccigmall.auto.test.page.SettingPage;
/**
 * 
 * @author chenjingli
 * 
 */
public class ActivityListPage  extends SettingPage  {
	/**
	 * 活动列表page
	 * @param driver
	 */
	public ActivityListPage(WebDriver driver) {
		super(driver);
	}
	
	/**
	 * 活动列表的输入活动名称
	 */
	@FindBy(linkText="活动列表")
	private WebElement linkCliActivityList;
	/**
	 * 活动列表的输入活动名称
	 */
	@FindBy(id="activityName")
	private WebElement IdTypeActivityName;
	

	/**
	 * 输入活动时间
	 */
	@FindBy(id="activityTime")
	private WebElement IdTypeActivityTime;
	/**
	 * 点击查询按钮
	 */
	@FindBy(id="button")
	private WebElement IdClickView;
	
	/**
	 * 操作栏中--点击管理规则按钮，管理赠品也适用
	 */
	@FindBy(xpath="//table [@class='tb-promotion']/descendant::a[2]")
	private WebElement XpathCliMangerRule;
	/**
	 * 操作栏中--点击启用
	 */
	@FindBy(xpath="//td[@class='tac']/a[3]")
	private WebElement XpathCliStartUseing;
	/**
	 * 操作栏中--点击删除
	 */
	@FindBy(xpath="//td[@class='tac']/a[4]")
	private WebElement XpathCliDel;
	/**
	 * 操作栏中--点击查看
	 */
	@FindBy(xpath="//td[@class='tac']/a[1]")
	private WebElement XpathCliView;
	
	
	
	/**
	 * 活动列表的输入活动名称
	 */
	public WebElement getIdTypeActivityName() {
		return IdTypeActivityName;
	}
	/**
	 * 输入活动时间
	 */
	public WebElement getIdTypeActivityTime() {
		return IdTypeActivityTime;
	}
	/**
	 * 点击查询按钮
	 */
	public WebElement getIdIdClickView() {
		return IdClickView;
	}

	/**
	 * 操作栏中--点击管理规则按钮，管理赠品也适用
	 */
	public WebElement getXpathCliMangerRule() {
		return XpathCliMangerRule;
	}
	/**
	 * 操作栏中--点击启用
	 */
	public WebElement getXpathCliStartUseing() {
		return XpathCliStartUseing;
	}
	/**
	 * 操作栏中--点击删除
	 */
	public WebElement getXpathCliDel() {
		return XpathCliDel;
	}
	/**
	 * 操作栏中--点击查看
	 */
	public WebElement getXpathCliView() {
		return XpathCliView;
	}
	
	public WebElement getLinkCliActivityList() {
		return linkCliActivityList;
	}
	public WebElement getIdClickView() {
		return IdClickView;
	}
}
